<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2962FF"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/siguiente"
        android:layout_width="152dp"
        android:layout_height="69dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="Siguiente"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="646dp" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="145dp"
        android:layout_height="67dp"
        android:fontFamily="sans-serif-black"
        android:text="¡Hola!"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="351dp"
        android:layout_height="153dp"
        android:text="¿Estás buscando realizar tus actividades diarias  y no te animas?"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="¡Nosotros tenemos la solución!"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Cuéntanos tus intereses y actividades favoritas!"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="421dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="278dp"
        android:src="@drawable/balance"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="421dp" />
</androidx.constraintlayout.widget.ConstraintLayout>